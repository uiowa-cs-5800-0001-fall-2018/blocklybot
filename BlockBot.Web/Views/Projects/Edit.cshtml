@model BlockBot.Common.Data.Project

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="OwnerId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsPublic" /> @Html.DisplayNameFor(model => model.IsPublic)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TwilioServiceSID" class="control-label"></label>
                <input asp-for="TwilioServiceSID" class="form-control" />
                <span asp-validation-for="TwilioServiceSID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TwilioAccountSID" class="control-label"></label>
                <input asp-for="TwilioAccountSID" class="form-control" />
                <span asp-validation-for="TwilioAccountSID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TwilioAuthToken" class="control-label"></label>
                <input asp-for="TwilioAuthToken" class="form-control" />
                <span asp-validation-for="TwilioAuthToken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Dashboard" asp-controller="Dashboard">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
